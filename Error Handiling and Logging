import logging

# Set up logging
logging.basicConfig(filename='bms.log',
level=logging.INFO,
format='%(asctime)s - %(levelname)s -
%(message)s')

# Example of how to use logging in functions
def add_product(connection, product_name, description,
price, quantity_in_stock, category):
try:
cursor = connection.cursor()

sql_insert_query = """INSERT INTO products
(product_name, description, price, quantity_in_stock,
category)
VALUES (%s, %s, %s, %s, %s)"""
values = (product_name, description, price,
quantity_in_stock, category)
cursor.execute(sql_insert_query, values)
connection.commit()
logging.info(f"Product '{product_name}' added
successfully")
print("Product added successfully")
except Error as e:
logging.error(f"Error adding product
'{product_name}': {e}")
print(f"Failed to insert product: {e}")
